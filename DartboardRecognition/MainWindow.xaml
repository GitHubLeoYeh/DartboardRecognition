<Window x:Class="DartboardRecognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DartboardRecognition"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="623"
        Width="390.2"
        ResizeMode="NoResize"
        Closing="OnClosing">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Image x:Name="DartboardProjectionImageBox" HorizontalAlignment="Left" Height="308" Margin="33,36,0,0" VerticalAlignment="Top" Width="314" />
        <TextBox x:Name="PointsBox" HorizontalAlignment="Left" Height="118" Margin="34,362,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="314"/>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="34,519,0,0" VerticalAlignment="Top" Width="153" Click="StartButtonClick" Height="39"/>
        <Button x:Name="StopButton" Content="Stop" HorizontalAlignment="Left" Margin="194,519,0,0" VerticalAlignment="Top" Width="154" Click="StopButtonClick" Height="39" IsEnabled="False"/>
        <CheckBox x:Name="RuntimeCapturingCheckBox" Content="Runtime capturing" HorizontalAlignment="Left" Margin="34,493,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
